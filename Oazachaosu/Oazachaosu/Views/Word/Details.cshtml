@model OazachaosuRepository.Model.Word
@{
  ViewBag.Title = "Edycja " + Model.Language1;
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center">
  <div class="row content">
    <section id="MainSection">
      <div style="margin-left: 20px">

        @using (Html.BeginForm("Edit", "Word", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
          @Html.AntiForgeryToken()
          <hr />
          @Html.ValidationSummary(true)
          <div class="form-group hidden">
            <div class="col-md-9">
              @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @value = Model.Id })
            </div>
          </div>
          <div class="form-group hidden">
            <div class="col-md-9">
              @Html.TextBoxFor(m => m.GroupId, new { @class = "form-control", @value = Model.GroupId })
            </div>
          </div>
          
          <div class="form-group">
            @Html.LabelFor(m => m.Language1, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
              @Html.TextAreaFor(m => m.Language1, new { @class = "form-control", @value = Model.Language1 })
              @Html.ValidationMessageFor(m => m.Language1)
            </div>
          </div>
          
          <div class="form-group">
            @Html.LabelFor(m => m.Language2, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
              @Html.TextAreaFor(m => m.Language2, new { @class = "form-control", @value = Model.Language2 })
              @Html.ValidationMessageFor(m => m.Language2)
            </div>
          </div>
          
          <div class="form-group">
            @Html.LabelFor(m => m.Language1Comment, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
              @Html.TextAreaFor(m => m.Language1Comment, new { @class = "form-control", @value = Model.Language1Comment })
              @Html.ValidationMessageFor(m => m.Language1Comment)
            </div>
          </div>
          
          <div class="form-group">
            @Html.LabelFor(m => m.Language2Comment, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
              @Html.TextAreaFor(m => m.Language2Comment, new { @class = "form-control", @value = Model.Language2Comment })
              @Html.ValidationMessageFor(m => m.Language2Comment)
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
              <div class="checkbox text-left">
                @Html.CheckBoxFor(m => m.Visible)
                @Html.LabelFor(m => m.Visible)
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
              <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
          </div>
        }

      </div>
    </section>
  </div>
</div>

@section scripts{
  <script src="@Url.Content("~/Scripts/WordkiScript.js")"></script>
}

@section styles{
  <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/WordkiStyle.css")">
}