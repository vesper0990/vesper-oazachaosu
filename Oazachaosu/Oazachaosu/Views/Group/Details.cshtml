@using System.Collections
@model Oazachaosu.Models.EditGroupViewModel
@{
  ViewBag.Title = Model.Name;
}


@using (Html.BeginRouteForm("GroupEdit", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
  @Html.AntiForgeryToken()
  <hr />
  @Html.ValidationSummary(true)
  <div class="form-group hidden">
    <div class="col-md-9">
      @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @value = Model.Id })
    </div>
  </div>
  <div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
      @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @value = Model.Name })
      @Html.ValidationMessageFor(m => m.Name)
    </div>
  </div>
  <div class="form-group">
    @Html.LabelFor(m => m.Language1, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
      @Html.DropDownListFor(m => m.Language1, new SelectList(ViewData["Languages"] as IEnumerable, "Type", "Description", Model.Language1), new { @class = "form-control" })
      @Html.ValidationMessageFor(m => m.Language1)
    </div>
  </div>
  <div class="form-group">
    @Html.LabelFor(m => m.Language2, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
      @Html.DropDownListFor(m => m.Language2, new SelectList(ViewData["Languages"] as IEnumerable, "Type", "Description", Model.Language2), new { @class = "form-control" })
      @Html.ValidationMessageFor(m => m.Language2)
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
      <input type="submit" value="Zapisz" class="btn btn-default" />
    </div>
  </div>
}
